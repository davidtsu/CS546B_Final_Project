<div>
    <h1 class='text-center'>Game Log</h1>

    <div class='text-center'>
        <h3>Word: {{game.word}}</h3>

        {{#if gameWon}}
        <h3 class='success'>You won this game!</h3>
        {{else}}
        <h3 class='failure'>You lost this game!</h3>
        {{/if}}
    </div>

    <table class='results-stats'>
        <tr>
            <td>Players that have won this word:</td>
            <td>Players that have lost this word:</td>
        </tr>
        <tr>
            <td>{{game.timesWon}}</td>
            <td>{{game.timesLost}}</td>
        </tr>
    </table>

    <div id="comment-area">
        <label for='comments'>Here's what our users have to say about this word...</label>
        <ul id='comments'>
            {{#each comments}}
            {{!-- {{> new-comment}} --}}
            <li>{{this.commenter.name}} : {{this.comment}}</li>
            {{!-- {{else}}
            <li>No users have commented on this word yet. Submit a comment to be the first!</li> --}}
            {{/each}}
        </ul>
    </div>

    <!--<div id="comment-area">
            {{#each comments}} {{> new-comment}} {{/each}}
    </div>-->

    <form id="form-comment">
        <label for='phrase'>Leave a comment!</label>
        <textarea id='phrase' rows='2' name='phrase'></textarea> 
        <button type="submit">Send Comment</button>
    </form>

        <a href='/dashboard'>Back to Dashboard</a>

    <script src='/public/js/comments.js'></script>
</div>
