<div class="container-fluid justify-content-center">

    <div class='home-table'>
        <h4>All Games</h4>
        <table id='home-all-recent'>
            <tr class='table-header'>
                <td>Game #</td>
                <td>Latest Player</td>
                <td>W/L</td>
            </tr>
            {{#each allGames}}

            <tr>
                <td><a href="/dashboard/game?gameId={{this._id}}">{{this.gameNumber}}</a></td>
                {{#if (isdefined this.latestPlayer)}}
                    <td><a href="/dashboard/profile/{{this.latestPlayer._id}}">{{this.latestPlayer.firstName}}</a></td>
                {{#if (containsWinner this.latestPlayer this._id)}}
                    <td>Won</td>
                {{else}}
                    <td>Lost</td>
                {{/if}}
                {{else}}
                    <td>N/A</td>
                    <td>N/A</td>
                {{/if}}

            </tr>
            {{/each}}
        </table>
    </div>

</div>