<div class="container justfiy-content-center">
    <form class="form-signup" action='/signup' method="POST">
        {{#if send}}
	        <p >{{send}}</p>
	    {{/if}}
        <h1 class="h3 mb-1 font-weight-normal">Please signup</h1>
        <label for="firstNameInput">First Name</label>
        <input id="firstNameInput" type="text" name="firstName" />
        <label for="lastNameInput">Last Name</label>
        <input id="lastNameInput" type="text" name="lastName" />  
        <label for="createEmail" class="sr-only">Email address</label>
        <input type="email" id="createEmail" class="form-control" placeholder="Email address" required="" autofocus="" name="email">
        <label for="createPassword" class="sr-only">Password</label>
        <input type="password" id="createPassword" class="form-control" placeholder="Password" required="" name="password">
        <button class="btn btn-sm btn-secondary btn-block">Sign up</button>
        <p class="mt-1 mb-3 text-muted">CS 546 Fall 2020</p>
    </form>
</div>