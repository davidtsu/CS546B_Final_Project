<div class="container-fluid">
    <h1 class="text-center">Welcome, {{user.firstName}} {{user.lastName}}</h1>
    <p class="text-center">Your Recent Games, Themes to Play, and Recently Played Games displayed here.
    </p>

    <div class='home-table'>
        <h4>Your Recent Games</h4>
        <table id='home-your-recent'>
            <tr class='table-header'>
                <td>#</td>
                <td>Word</td>
                <td>Theme</td>
                <td>W/L</td>
            </tr>
            <!-- tr entries should be dynamically filled -->
        </table>
    </div>

    <div class='home-table'>
        <h4>Themes to Play</h4>
        <table id='home-themes'>
            <tr class='table-header'>
                <td>Theme</td>
            </tr>
            <!-- tr entries should be dynamically filled -->
        </table>
    </div>

    <div class='home-table'>
        <h4>Recent Games</h4>
        <table id='home-all-recent'>
            <tr class='table-header'>
                <td>Player</td>
                <td>Word</td>
                <td>Theme</td>
                <td>W/L</td>
            </tr>
            <!-- tr entries should be dynamically filled -->
        </table>
    </div>
</div>
