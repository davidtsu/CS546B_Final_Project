<div class="container-fluid">
    <h1 class="text-center">Welcome, {{user.firstName}} {{user.lastName}}</h1>
    <p class="text-center">Your Recent Games, Themes to Play, and Recently Played Games displayed here.
    </p>

    <div class='home-table'>
        <h4>Your Recent Games</h4>
        <table id='home-your-recent'>
            <tr class='table-header'>
                {{!-- <td>#</td> --}}
                <td>Word</td>
                {{!-- <td>Theme</td> --}}
                <td>Win or Loss</td>
            </tr>
            {{#each userGames}}
            <tr>
                {{!-- <td>{{this.}}</td> --}}
                <td>{{this.word}}</td>
                {{#if (contains user.gamesWonIDs this._id)}}
                <td>Won</td>
                {{else}}
                <td>Lost</td>
                {{/if}}
            </tr>
            {{/each}}

            {{#each user.gamesWonIDs}}
            <tr><td>{{user.gamesWonIDs}}</td></tr>
            {{/each}}
        </table>
    </div>

    <div class='home-table'>
        <h4>Themes to Play</h4>
        <table id='home-themes'>
            <tr class='table-header'>
                <td>Theme</td>
            </tr>
            {{#each allDictionaries}}
            <tr>
                <td><a href='/dashboard/game&themeId={{this._id}}'>{{this.theme}}</a></td>
            </tr>
            {{/each}}
            <!-- tr entries should be dynamically filled -->
        </table>
    </div>

    <div class='home-table'>
        <h4>Recently Played Games</h4>
        <table id='home-all-recent'>
            <tr class='table-header'>
                <td>Game #</td>
                <td>Latest Player</td>
                <td>W/L</td>
            </tr>
            {{#each allGames}}
            {{#if (isdefined this.latestPlayer)}}
            <tr>
                <td><a href="/dashboard/game&gameId={{this._id}}">{{this.gameNumber}}</a></td>
                <td>{{this.latestPlayer.firstName}}</td>
                {{#if (contains this.latestPlayer.gamesWon this._id)}}
                <td>Won</td>
                {{else}}
                <td>Lost</td>
                {{/if}}
            </tr>
            {{/if}}
            {{/each}}


            <!-- tr entries should be dynamically filled -->
        </table>
    </div>
</div>